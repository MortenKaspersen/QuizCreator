@model IEnumerable<QuizCreator.Models.User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
@if (!Model.Any())
{
    <p>We don't have any users yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>User</th>
            <th>Member Since</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@Html.ActionLink(user.Name, "Details", "Users", new { id = user.Id }, null)</td>
                <td>@user.MemberSince.Value.ToLongDateString()</td>
            </tr>
        }
        </tbody>
    </table>
}

